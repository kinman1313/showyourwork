# Server Configuration
PORT=5000
NODE_ENV=development
NODE_NO_WARNINGS=1

# Database
MONGODB_URI=mongodb://localhost:27017/chore-tracker

# Authentication
JWT_SECRET=your_jwt_secret_key_here  # Use a strong random string in production

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password  # Use Gmail App Password, not your regular password

# Frontend URL
FRONTEND_URL=http://localhost:3000  # Use your production URL in production

# API Keys for Smart Features
OPENAI_API_KEY=your_openai_api_key_here  # Get from https://platform.openai.com
OPENWEATHER_API_KEY=your_openweather_api_key_here  # Get from https://openweathermap.org/api

# Note: Never commit the actual .env file with real credentials
# Make sure to set up proper values in your production environment 